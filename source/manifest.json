{
  "manifest_version": 2,
  "name": "Twisome",
  "version": "1.0.0",
  "icons": {
    "16": "assets/icons/twisome-64.png",
    "32": "assets/icons/twisome-64.png",
    "48": "assets/icons/twisome-64.png",
    "64": "assets/icons/twisome-64.png",
    "128": "assets/icons/twisome-128.png"
  },
  "description": "An awesome twitter experience",
  "homepage_url": "https://github.com/lirantal/twisome",
  "short_name": "Twisome",
  "permissions": [
    "http://twitter.com/*",
    "https://twitter.com/*"
  ],
  "__dev__content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "__prod__content_security_policy": "script-src 'self'; object-src 'self'",
  "__chrome|firefox__author": "lirantal",
  "__opera__developer": {
    "name": "lirantal"
  },
  "__firefox__applications": {
    "gecko": {
      "id": "{754FB1AD-CC3B-4856-B6A0-7786F8CA9D17}"
    }
  },
  "__chrome__minimum_chrome_version": "49",
  "__opera__minimum_opera_version": "36",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/twisome-64.png",
      "32": "assets/icons/twisome-64.png",
      "48": "assets/icons/twisome-64.png",
      "64": "assets/icons/twisome-64.png",
      "128": "assets/icons/twisome-128.png"
    },
    "default_title": "tiny title",
    "__chrome|opera__chrome_style": false,
    "__firefox__browser_style": false
  },
  "__chrome|opera__options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "__chrome__chrome_style": false
  },
  "background": {
    "scripts": [
      "js/background.bundle.js"
    ],
    "__chrome|opera__persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://twitter.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "js/contentScript.bundle.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "js/injected.bundle.js"
  ]
}